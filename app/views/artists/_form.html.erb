<%= simple_form_for(@artist) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, :autofocus => true, class: 'form-control'  %>
    <%= f.select :gender, Artist::GENDER  %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => 'button right' %>
  </div>
<% end %>

