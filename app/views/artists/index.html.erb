<div class="panel panel-default">
 <div class="panel-heading"><strong>Artists</strong></div>
<div class="panel-body">
<% @artists.each do |artist| %>
<ul class="list-group">
  <li class="list-group-item">
    <% if user_signed_in? %>
    <span class="pull-right">
      <%= link_to 'Update Artist', edit_artist_path(artist), :class => "btn btn-default btn-xs" %>
      <%= link_to 'Remove Artist', artist, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger btn-xs" %>
    </span>

    <% end %>
    <%= link_to (artist.name).split.map(&:capitalize).join(' '), artist %>
  </li>
</ul>
<% end %>
<br>
<% if user_signed_in? %>
<span class=" pull-right"><%= link_to 'Add Artist', new_artist_path, :class => "btn btn-default btn-sm" %></span>
<% end %>